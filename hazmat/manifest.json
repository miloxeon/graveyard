{
  "manifest_version": 2,
  "name": "Hazmat",
  "description": "Ban subreddits you don't like",
  "version": "3.4.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "com.mvoloskov.hazmat@2.1.3"
    }
  },
  "permissions": [
    "storage"
  ],
  "minimum_chrome_version": "68",
  "content_scripts": [{
    "matches": [
      "http://www.reddit.com/*",
      "https://www.reddit.com/*",
      "http://reddit.com/*",
      "https://reddit.com/*"
    ],
    "js": [
      "src/app.js"
    ]
  }],
  "browser_action": {
    "default_icon": {
      "128": "src/assets/128.png"
    },
    "default_title": "Hazmat options",
    "default_popup": "src/options/popup.html"
  },
  "options_ui": {
    "page": "src/options/options.html"
  },
  "icons": {
    "128": "src/assets/128.png"
  }
}
